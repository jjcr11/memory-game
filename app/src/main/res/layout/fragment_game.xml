<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.GameFragment">

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/main_view_margin_bottom"
        android:visibility="invisible"
        app:cardCornerRadius="@dimen/main_view_corner_radius"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvMain2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/main_view_margin_bottom"
        android:visibility="invisible"
        app:cardCornerRadius="@dimen/main_view_corner_radius"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvButton1"
        android:layout_width="@dimen/button_side"
        android:layout_height="@dimen/button_side"
        app:cardBackgroundColor="@color/imperial_red"
        app:layout_constraintEnd_toStartOf="@id/mcvButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:rippleColor="@color/payne_gray" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvButton2"
        android:layout_width="@dimen/button_side"
        android:layout_height="@dimen/button_side"
        app:cardBackgroundColor="@color/orange_crayola"
        app:layout_constraintEnd_toStartOf="@id/mcvButton3"
        app:layout_constraintStart_toEndOf="@id/mcvButton1"
        app:layout_constraintTop_toTopOf="@id/mcvButton1"
        app:rippleColor="@color/payne_gray" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvButton3"
        android:layout_width="@dimen/button_side"
        android:layout_height="@dimen/button_side"
        app:cardBackgroundColor="@color/fuchsia"
        app:layout_constraintEnd_toStartOf="@id/mcvButton4"
        app:layout_constraintStart_toEndOf="@id/mcvButton2"
        app:layout_constraintTop_toTopOf="@id/mcvButton1"
        app:rippleColor="@color/payne_gray" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvButton4"
        android:layout_width="@dimen/button_side"
        android:layout_height="@dimen/button_side"
        app:cardBackgroundColor="@color/saffron"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mcvButton3"
        app:layout_constraintTop_toTopOf="@id/mcvButton1"
        app:rippleColor="@color/payne_gray" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvButton5"
        android:layout_width="@dimen/button_side"
        android:layout_height="@dimen/button_side"
        android:layout_marginTop="@dimen/common"
        app:cardBackgroundColor="@color/pistachio"
        app:layout_constraintStart_toStartOf="@id/mcvButton1"
        app:layout_constraintTop_toBottomOf="@id/mcvButton1"
        app:rippleColor="@color/payne_gray" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvButton6"
        android:layout_width="@dimen/button_side"
        android:layout_height="@dimen/button_side"
        app:cardBackgroundColor="@color/medium_slate_blue"
        app:layout_constraintStart_toStartOf="@id/mcvButton2"
        app:layout_constraintTop_toTopOf="@id/mcvButton5"
        app:rippleColor="@color/payne_gray" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvButton7"
        android:layout_width="@dimen/button_side"
        android:layout_height="@dimen/button_side"
        app:cardBackgroundColor="@color/rose_taupe"
        app:layout_constraintStart_toStartOf="@id/mcvButton3"
        app:layout_constraintTop_toTopOf="@id/mcvButton5"
        app:rippleColor="@color/payne_gray" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvButton8"
        android:layout_width="@dimen/button_side"
        android:layout_height="@dimen/button_side"
        app:cardBackgroundColor="@color/cerulean"
        app:layout_constraintStart_toStartOf="@id/mcvButton4"
        app:layout_constraintTop_toTopOf="@id/mcvButton5"
        app:rippleColor="@color/payne_gray" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvPlay"
        android:layout_width="@dimen/button_play_side"
        android:layout_height="@dimen/button_play_side"
        app:cardBackgroundColor="@color/coral"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mcvButton5"
        app:rippleColor="@color/payne_gray">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_play_arrow" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_score"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/mcvPlay"
        app:layout_constraintEnd_toEndOf="@id/mcvPlay"
        app:layout_constraintStart_toStartOf="@id/mcvPlay"
        app:layout_constraintTop_toTopOf="@id/mcvPlay" />

</androidx.constraintlayout.widget.ConstraintLayout>